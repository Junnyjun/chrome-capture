    <HBox styleClass="window-title-bar">
      <Label text="Draggable Window" />
      <Region HBox.hgrow="ALWAYS" />
      <Button text="-" onAction="#minimizeWindow" />
      <Button text="X" onAction="#closeWindow" />
    </HBox>
  </top>
